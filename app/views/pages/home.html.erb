<% if user_signed_in? %>

  <%= render 'dashboard/main' %>

<% else %>

  <div class="large-12 colum hero text-center ">
    <h1>Highlight, filter, and identify relevant news</h1>
    <h2 class="subheader">News aggregation designed and built for connected people</h2>
    <%= link_to 'Sign up for free', new_user_registration_path, class: 'button small secondary radius large-3' %>
    <p class="small">No credit card required</p>

  </div>

  <div class="large-12 column">
    <div class="row">
        <h2>News Triangle uses your networks to highlight relevant news</h2>
      <p >Your social networks are a treasure trove of data. Help identify news that relates to you by filtering it with your social network.</p>
      <div class="large-4 column text-center">
        <%= image_tag 'locationicon.png' %>
        <h3>Locations</h3>
        <%= link_to about_path, class: 'button secondary large-12' do %>
        Learn more
        <% end %>
      </div>
      <div class="large-4 column text-center">
        <%= image_tag 'companyicon.png' %>
        <h3>Companies</h3>
        <%= link_to about_path, class: 'button secondary large-12' do %>
        Learn more
        <% end %>
      </div>
      <div class="large-4 column text-center">
        <%= image_tag 'connectionicon.png' %>
        <h3>Connections</h3>
        <%= link_to about_path, class: 'button secondary large-12' do %>
        Learn more
        <% end %>
      </div>
    </div>
  </div>

  <%= render 'layouts/acquisition/connect' %>

<% end %>
